<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Define a console appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Define a file appender with rolling policies -->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <!-- Set the log directory explicitly outside the service -->
        <file>C:/Users/MOHANPRASATHN/Desktop/logs/application.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>C:/Users/MOHANPRASATHN/Desktop/logs/application.log.%d{yyyy-MM-dd}.%i</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
    </appender>

    <!-- Configure the root logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>

    <!-- Configure a specific logger -->
    <logger name="com.example" level="DEBUG"/>
</configuration>
